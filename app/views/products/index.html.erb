<h1>Products#index</h1>
<% @products.each do |product| %>
  <%= product.name %>
  <%= product.description %>
  <%= product.price %>
  <%= link_to "Show", product_path(product) %>
  <%= link_to "Edit", edit_product_path(product) %>
  <%= button_to "Delete", product_path(product),form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
  <%# TODO button_toでなければ動作させれない、他に方法探す必要あり %>
<% end %>

<%= link_to "New", new_product_path %>